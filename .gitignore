# Ignore OS-generated files
.DS_Store
Thumbs.db

# Ignore node_modules if using build tools like npm or gulp
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Ignore build artifacts
*.log
*.zip
*.tar.gz

# Ignore SASS/SCSS cache
.sass-cache/

# Ignore compiled assets (optional, if you generate them)
dist/
build/

# Ignore PHPStorm / VSCode / other IDE settings
.idea/
.vscode/
*.sublime-project
*.sublime-workspace

# Ignore WordPress uploads (not part of theme)
../uploads/
../wp-content/uploads/

# Ignore environment files
.env
.env.local
.env.*

# Ignore backup files
*.bak
*.tmp
*.swp
*~

# Ignore composer and vendor (if not used in theme directly)
vendor/
composer.lock
composer.phar

# Ignore WordPress core (if repository includes entire site)
wp-admin/
wp-includes/
wp-config.php
.htaccess
license.txt
readme.html
xmlrpc.php

# Theme-specific
*.mo
*.po

# Ignore generated API docs or postman collections (optional)
postman/
docs/
